<!DOCTYPE html>
<html lang="ko">
<head>
    <title>음성 업로드</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/base.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #064663;
        }

        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #05445E;
            height: 80px;
        }

        .navbar button {
            background-color: #189AB4;
            color: white;
            border: none;
            padding: 15px 30px;
            margin: 0 10px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .navbar button:hover {
            background-color: #75E6DA;
        }

        .content {
            background-color: #189AB4;
            height: calc(100vh - 80px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 24px;
            text-align: center;
            padding: 20px;
        }

        .form-control {
            border-radius: 10px !important;
            width: 80%;
            max-width: 800px;
            height: 300px;
            margin-top: 20px;
            font-size: 16px;
        }
        
        .result-section {
            margin-top: 20px;
            width: 80%;
            max-width: 800px;
            background-color: #05445E;
            padding: 15px;
            border-radius: 5px;
            color: white;
            font-size: 18px;
            word-wrap: break-word;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <button onclick="navigateTo('summary')">텍스트 요약</button>
        <button onclick="navigateTo('doc')">문서</button>
        <button onclick="navigateTo('voice')">음성</button>
    </div>
    <div class="content">
        <h1>음성 업로드</h1>
        <form id="audioForm" enctype="multipart/form-data">
            <label for="audioFile">음성 파일 업로드:</label>
            <input type="file" id="audioFile" name="audio" accept="audio/*" style="margin-top: 10px;">
            <button type="button" onclick="uploadAudio()" style="margin-top: 10px;">음성 파일 변환</button>
        </form>
        <textarea class="form-control" id="result" rows="25" cols="100" placeholder="변환된 텍스트가 여기에 표시됩니다."></textarea>
        <button type="button" id="summarize-voice" class="btn btn-secondary" style="margin-top: 10px;">요약하기</button>
        
        <!-- 요약 결과를 표시할 새로운 영역 -->
        <div id="summaryResult" class="result-section" style="display: none;">
            <h3>요약 결과</h3>
            <p id="summaryOutput"></p>
        </div>
    </div>

    <script>
        function navigateTo(page) {
            if (page === 'summary') {
                window.location.href = '/summary-page';
            } else if (page === 'doc') {
                window.location.href = '/doc-upload';
            } else if (page === 'voice') {
                window.location.href = '/voice-upload';
            }
        }

        function uploadAudio() {
            const fileInput = document.getElementById('audioFile').files[0];

            if (!fileInput) {
                alert('음성 파일을 선택해주세요.');
                return;
            }

            const formData = new FormData();
            formData.append('file', fileInput);

            fetch('/speach/upload', {
                method: 'POST',
                body: formData,
            })
                .then((response) => response.json())
                .then((data) => {
                    const textarea = document.getElementById('result');
                    textarea.value = data.content || '변환에 실패했습니다.';
                })
                .catch((error) => {
                    console.error('Error:', error);
                    alert('파일 업로드 중 오류가 발생했습니다.');
                });
        }

        document.getElementById('summarize-voice').addEventListener('click', function() {
            const content = document.getElementById('result').value;
            if (!content.trim()) {
                alert('요약할 텍스트가 없습니다.');
                return;
            }
            fetch('http://localhost:3001/summarize', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ content })
            })
            .then(response => response.json())
            .then(data => {
                const summaryResult = document.getElementById('summaryResult');
                const summaryOutput = document.getElementById('summaryOutput');
                summaryOutput.textContent = data.summary || '요약에 실패했습니다.';
                summaryResult.style.display = 'block';
            })
            .catch(error => {
                console.error('Error:', error);
                alert('요약 중 오류가 발생했습니다.');
            });
        });
    </script>
</body>
</html>
