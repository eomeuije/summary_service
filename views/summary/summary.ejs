<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Text Summary</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>
        .loading {
            display: none;
            width: 16px;
            height: 16px;
            border: 4px solid #f3f3f3;
            border-radius: 50%;
            border-top: 4px solid #3498db;
            animation: spin 1s linear infinite;
            margin-left: 8px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .disabled {
            background-color: grey;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">텍스트 요약</h1>
        <form id="summaryForm">
            <div class="mb-3">
                <label for="content" class="form-label">요약 텍스트:</label>
                <textarea class="form-control" id="content" rows="5" placeholder="요약 원문을 입력해주세요."></textarea>
            </div>
            <button type="submit" id="submit-btn" class="btn btn-primary">요약</button>
            <div id="loading" class="loading"></div>
        </form>
        <div id="summaryResult" class="mt-5">
            <p id="summaryOutput"></p>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            const convertedText = sessionStorage.getItem("convertedText");
            if (convertedText) {
                $('#content').val(convertedText);
                sessionStorage.removeItem("convertedText");
            }

            $('#summaryForm').on('submit', function(e) {
                const button = document.getElementById("submit-btn");
                const loadingIcon = document.getElementById("loading");

                button.disabled = true;
                button.classList.add('disabled');
                loadingIcon.style.display = "inline-block";

                e.preventDefault(); 

                var content = $('#content').val();
                
                $.ajax({
                    url: 'http://localhost:3001/summarize',
                    type: 'POST',
                    data: JSON.stringify({ content }),
                    contentType: 'application/json',
                    success: function(response) {
                        $('#summaryOutput').text(response.summary);
                        button.disabled = false;
                        button.classList.remove('disabled');
                        loadingIcon.style.display = "none";
                    },
                    error: function() {
                        $('#summaryOutput').text('An error occurred while summarizing the text.');
                        button.disabled = false;
                        button.classList.remove('disabled');
                        loadingIcon.style.display = "none";
                    }
                });
            });
        });
    </script>
</body>
</html>
