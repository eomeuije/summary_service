<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/base.css">
  <style>
    .card {
      width: 400px;
      margin: 0 auto;
      border: none;
    }
    #confirm {
        color: red;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-body">
        <form id="signup-form" action="/sign/up" method="POST">
          <div class="form-group">
            <label for="username">닉네임</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="username">아이디</label>
            <input type="text" class="form-control" id="id" name="id" required>
            <div id="confirm">중복된 아이디입니다.</div>
          </div>
          <div class="form-group" style="margin-top: 50px;">
            <label for="password">비밀번호</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <div class="form-group">
            <label for="confirmPassword">비밀번호 확인</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            <div id="passwordError" style="color: red; display: none;">비밀번호가 일치하지 않습니다.</div>
          </div>
          <script>
            $(document).ready(function() { // 문서가 모두 로드된 후 콜백 실행
                $('#signup-form').on('submit', function(event) {
                    const password = $('#password').val();
                    const confirmPassword = $('#confirmPassword').val();
                    const passwordError = $('#passwordError');

                    if (password !== confirmPassword) {
                        passwordError.show();
                        event.preventDefault(); // 다르면 제출 중지
                    } else {
                        passwordError.hide();
                    }
                });
            });
            if (Boolean(new URL(location.href).searchParams.get('error'))) {
              $('#confirm').show();
            } else {
              $('#confirm').hide();
            } 
          </script>
          <button type="submit" class="button">가입</button>
          <a href="/sign/google">구글 회원가입</a>
        </form>
      </div>
    </div>
  </div>
</body>
</html>